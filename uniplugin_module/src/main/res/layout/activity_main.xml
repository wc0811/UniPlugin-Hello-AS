<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zh.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="BK72XX BLE 配网测试"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />


        <!--ble name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝牙名字:"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_ble_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:hint=""
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="12sp" />

            <Button

                android:id="@+id/btn_search_ble"
                style="@style/BtnStyle"
                android:layout_width="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="3dp"
                android:onClick="onClick"
                android:text="选择蓝牙" />

        </LinearLayout>


        <!--ssid-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIFI名字:"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_ssid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:hint=""
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="12sp" />

            <Button

                android:id="@+id/btn_search_ssid"
                style="@style/BtnStyle"
                android:layout_width="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="3dp"
                android:onClick="onClick"
                android:text="选择SSID" />

        </LinearLayout>

        <!--password-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIFI密码:"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:hint=""
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cb_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示密码"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_start_config"
            style="@style/BtnStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:onClick="onClick"
            android:text="开始配网" />

        <EditText
            android:id="@+id/et_log"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/border_bg"
            android:clickable="true"
            android:enabled="true"
            android:focusable="false"
            android:gravity="top|left"
            android:paddingLeft="8dp"
            android:scrollbars="vertical|horizontal"
            android:singleLine="false"
            android:textSize="10sp" />
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_clear_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:onClick="onClick"
        android:visibility="visible"
        app:backgroundTint="#007b6c"
        app:rippleColor="@color/colorPrimary"
        app:srcCompat="@drawable/delete_icon" />

</FrameLayout>